{
    "name": "Crypt4/jantung-php",
    "description": "Jantung for PHP",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Crypt4\\Jantung\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Crypt4\\Jantung\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Zahir Din",
            "email": "mail@zahir.my"
        }
    ],
    "require": {
        "php": "^7.4 || ^8.0 || ^8.1 || ^8.2",
        "guzzlehttp/guzzle": "^6.3.1|^7.0.1",
        "hisorange/browser-detect": "^4.5",
        "illuminate/support": "^6.0 || ^7.0 || ^8.0 || ^9.0 || ^10.0",
        "ramsey/uuid": "^3.0 | ^4.7"
    },
    "require-dev": {
        "mockery/mockery": "^1.5",
        "phpunit/phpunit": "^8.0 || ^9.0 || ^10.1"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "scripts": {
        "test" : "@php vendor/bin/phpunit"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
